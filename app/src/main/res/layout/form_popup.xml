<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtPop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thats a popup nibba"
        android:textColor="#222222"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26999998" />

    <Button
        android:id="@+id/btnPop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="click me"
        app:layout_constraintEnd_toEndOf="@+id/txtPop"
        app:layout_constraintStart_toStartOf="@+id/txtPop"
        app:layout_constraintTop_toBottomOf="@+id/txtPop" />
</androidx.constraintlayout.widget.ConstraintLayout>